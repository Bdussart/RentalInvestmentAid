{
  "ConnectionStrings": {
    //"RentalInvestmentAidDatabase": "Data Source=127.0.0.1,1433;Initial Catalog=RentalInvestmentAid;Persist Security Info=True;User ID=RentalUser;Password=AbC12345678!;Encrypt=False"
    "RentalInvestmentAidDatabase": "Data Source=127.0.0.1,1455;Initial Catalog=RentalInvestmentAid;Persist Security Info=True;User ID=RentalUser;Password=AbC12345678!;Encrypt=False"
  },
  "Cache": {
    "RentalCacheKey": "RentalCacheKey",
    "AnnouncementCacheKey": "AnnouncementCacheKey",
    "RateCacheKey": "RateCacheKey",
    "CityCacheKey": "CityCacheKey",
    "LoanCacheKey": "LoanCacheKey",
    "RentCacheKey": "RentCacheKey"
  },
  "Queue": {
    "RentalQueueName": "rental-dev",
    "AnnouncementQueueName": "announcement-dev"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "C:/Users/BriceRTS/Documents/Log/log-{Date}/log.txt" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Application": "Sample"
    }
  },
  "DetailedErrors": true, // turns on CircuitOptions.DetailedErrors
  "Logging": {
    "LogLevel": { 
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.SignalR": "Debug" // turns on SignalR debugging
    }
  },
  "AllowedHosts": "*"
}
